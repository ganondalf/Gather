
<h1><%= @user.name.capitalize %>'s Profile Page</h1>
<img src="<%=@user.picture_url %>">
<h2>
  <a href="<%=@user.github_url %>"><button>GitHub</button></a></br>
  <a href="https://www.pivotaltracker.com/signin"><button>Pivotal Tracker</button></a>
  <% if @user.personal_url != nil %>
    <a href="<%=@user.personal_url %>"><button>Personal Website</button></a></br>
  <% end %>
</h2>

<% if @user.is_admin? %>
 <h2>Admin Controls</h2>
 <p><a href="/objectives/new">Add New Objective</a></p>
 <p><a href="/objectives">Delete An Objective</a></p>
<% end %>

  <h3><%= @user.name %>'s Learning Objectives</h3>
  <ul>
    <li><% @user.ranks.each do |rank| %>
        <%= rank.objective.name %>:<%= rank.objective.value %>
        <% end %>
    </li>
  </ul>
<!-- ----------------------- -->
<p> Github Issues:
    <a href="https://github.com/login/oauth/authorize?scope=user:email&client_id=<%= @client_id %>">View GitHub issues here</a>
</p>

<a href="/">Home Page</a>
<a href="/users/<%= @user.id %>/edit">Edit Account</a>



